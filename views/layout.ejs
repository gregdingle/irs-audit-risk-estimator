<head>
	<meta charset="utf-8" />

	<!-- Set the viewport width to device width for mobile -->
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<title>IRS audit risk estimator</title>

	<!-- Included CSS Files -->
	<link rel="stylesheet" href="stylesheets/app.css">

	<script src="javascripts/foundation/modernizr.foundation.js"></script>
	<script type="text/javascript">
		var _gaq = _gaq || [];
		_gaq.push(['_setAccount', 'UA-38300423-1']);
		<% if(typeof totalIncome != 'undefined' && 
		      typeof scheduleATotalItemizedDeductions != 'undefined' &&
		      typeof scheduleCTotalBusinessExpenses != 'undefined' &&
		      typeof scheduleFTotalFarmExpenses != 'undefined') { %>
			_gaq.push(['_setCustomVar', 1, 'totalIncome', '<%= totalIncome %>', 2]);
			_gaq.push(['_setCustomVar', 2, 'scheduleATotalItemizedDeductions', '<%= scheduleATotalItemizedDeductions %>', 2]);
			_gaq.push(['_setCustomVar', 3, 'scheduleCTotalBusinessExpenses', '<%= scheduleCTotalBusinessExpenses %>', 2]);
			_gaq.push(['_setCustomVar', 4, 'scheduleFTotalFarmExpenses', '<%= scheduleFTotalFarmExpenses %>', 2]);
		<% } %>
		_gaq.push(['_trackPageview']);
	</script>
</head>
<body>

	<%- body -%>

	<!-- Included JS Files (Uncompressed) -->
	<script src="javascripts/foundation/jquery.js"></script>
